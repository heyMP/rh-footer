{
  "name": "rh-footer",
  "description": "Webcomponent rh-footer following open-wc recommendations",
  "license": "MIT",
  "author": "rh-footer",
  "version": "0.0.9",
  "type": "module",
  "main": "./src/rh-footer.js",
  "module": "./src/rh-footer.js",
  "exports": {
    ".": "./src/index.js",
    "./rh-footer.js": "./src/rh-footer.js"
  },
  "sideEffects": [
    "rh-footer.js"
  ],
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "build": "rimraf public && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude public",
    "start:build": "web-dev-server --root-dir public --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "start:proxy": "nodemon ./scripts/proxy.js",
    "precompress": "npm run build"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "@patternfly/pfe-accordion": "^1.12.2",
    "@patternfly/pfe-cta": "^1.12.2",
    "@patternfly/pfe-icon": "^1.12.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@lit-labs/ssr": "^1.0.0",
    "@web/dev-server": "^0.1.28",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "next",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.15",
    "node-fetch": "^3.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "recursive-copy": "^2.0.13",
    "replace-in-file": "^6.3.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json",
  "files": [
    "src",
    "assets",
    "custom-elements.json"
  ]
}