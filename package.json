{
  "name": "rh-footer",
  "description": "Webcomponent rh-footer following open-wc recommendations",
  "license": "MIT",
  "author": "rh-footer",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./rh-footer.js": "./dist/rh-footer.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "start:proxy": "nodemon ./scripts/proxy.js",
    "build": "tsc && npm run analyze -- --exclude dist && npm run build:deploy",
    "build:deploy": "node ./scripts/deploy.js",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "dependencies": {
    "lit": "^2.0.2",
    "@patternfly/pfe-accordion": "^1.12.2",
    "@patternfly/pfe-cta": "^1.12.2",
    "@patternfly/pfe-icon": "^1.12.2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@lit-labs/ssr": "^1.0.0",
    "@web/dev-server": "^0.1.28",
    "@web/test-runner": "next",
    "concurrently": "^5.3.0",
    "esbuild": "^0.14.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.15",
    "node-fetch": "^3.1.0",
    "prettier": "^2.4.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "recursive-copy": "^2.0.13",
    "replace-in-file": "^6.3.2"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}